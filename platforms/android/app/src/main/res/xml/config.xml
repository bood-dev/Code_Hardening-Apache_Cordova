<?xml version='1.0' encoding='utf-8'?>
<widget id="io.codehardening.apachecordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="SSLCertificateChecker">
        <param name="android-package" value="nl.xservices.plugins.SSLCertificateChecker" />
    </feature>
    <feature name="IsDebug">
        <param name="android-package" value="me.mattlewis.isdebug.IsDebug" />
    </feature>
    <feature name="checkDebugger">
        <param name="android-package" value="com.neutrinos.checkdebuggerplugin.checkDebugger" />
    </feature>
    <name>Hardened App</name>
    <description>
        A sample Apache Cordova app with security controls based on OWASP-MSTG.
    </description>
    <author email="bood.dev@gmail.com" href="https://bood-dev.github.io/">
        bood
    </author>
    <icon density="mdpi" height="57" platform="ios" src="www/img/icon.png" width="57" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
