<?xml version='1.0' encoding='utf-8'?>
<widget id="io.codehardening.apachecordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hardened App</name>
    <description>
        A sample Apache Cordova app with security controls based on OWASP-MSTG.
    </description>
    <author email="bood.dev@gmail.com" href="https://bood-dev.github.io/">
        bood
    </author>
    <icon src="www/img/icon.png" platform="ios" width="57" height="57" density="mdpi" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
